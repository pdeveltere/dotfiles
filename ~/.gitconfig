[user]
	name = Pieter Develtere
	email = pieterdeveltere@gmail.com
[alias]
        b = branch
        co = checkout
        c = commit -m
        s = status
        p = push --no-verify
        ca = commit --amend
        can = commit --amend --no-edit
        m = checkout main
[push]
	default = current
	autoSetupRemote = true
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
